<%- include('../partials/head.ejs') %>
<script src='javascripts/lectures/index.js'></script>
</head>
<body>
	<div class='container'>
		<div class='row'>
			<select autocomplete='off' id='houseSelect' name = 'id_house' required >
				<option  selected disabled value=''>Выберите группу</option>
					<% for(let row of houses){%>
						<option value=<%= row.id %> ><%= row.house %></option>
					<%}%>
			</select>

		</div>

		<div class='row'>
		<h2>Темы лекций</h2>
		
			<div class='row'>
				<table class='table' id='lecturesTable'>
				</table>
			</div>
			<div class='row'>
				<input type="button"  id="deleteForm" value='Удалить выбранное'/>
			</div>
		</div>
			
		<h2>Добавить</h2>
			<select autocomplete='off' id='subjectSelect' name ='id_subject' required >
				<option  selected disabled value=''>Выберите тему</option>
					<% for(let row of subjects){%>
						<option value=<%= row.id %> ><%= row.name %></option>
					<%}%>
			</select>
			<input type=button id="addForm" value='Добавить'/>


		<a href = "/teacher/dashboard">Дашборд</a>
	</div>
</body>
</html>
