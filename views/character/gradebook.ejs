<%- include('../partials/head.ejs') %>
<title>Дневник</title>
</head>
<body>
	<div class="container">
		<h1><%= username %> дневник</h1>
			<table class='table table-prime'>
			<% for(let res of result) { %>
				<tr>
					<td>
						<a href='<%=res.description %>' >
							<%= res.name %>
						</a> 
					</td> 
					<td>
						<% if (res.is_done == true) { %>
							<a href='<%= res.url %>'>
								________	
							</a>
						<% } %>
					</td>
					<td> <%= res.grade %></td>
					<td><%= res.notes %></td>
				<%}%>
				</tr>
			</table>
			<a href="/logout">logout</a>
	</div>

</body>
</html>
